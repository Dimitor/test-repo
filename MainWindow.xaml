<Window x:Class="AnotherDraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnotherDraft"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="400" MinWidth="600" Icon="Resources/Черновик.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="291*"/>
            <ColumnDefinition Width="503*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataDg" HorizontalAlignment="Left" Height="233" Margin="10,82,0,0" VerticalAlignment="Top" Width="774" ColumnWidth="*" ItemsSource="{Binding}" IsReadOnly="True" Grid.ColumnSpan="2" SelectionChanged="dataDg_SelectionChanged" AutoGeneratedColumns="dataDg_AutoGeneratedColumns"/>
        <Button x:Name="prevPageBtn" Content="Назад" HorizontalAlignment="Left" Margin="216,334,0,0" VerticalAlignment="Top" Width="75" Click="prevPageBtn_Click"/>
        <Button x:Name="nextPageBtn" Content="Вперёд" HorizontalAlignment="Left" Margin="168.8,334,0,0" VerticalAlignment="Top" Width="75" Click="nextPageBtn_Click" Grid.Column="1"/>
        <ComboBox x:Name="sortMaterialParameterCmb" HorizontalAlignment="Left" Margin="134,39,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" SelectionChanged="sortMaterialParameterCmb_SelectionChanged"/>
        <ComboBox x:Name="filterMaterialTypeCmb" HorizontalAlignment="Left" Margin="336.8,42,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1" SelectedIndex="0" SelectionChanged="filterMaterialTypeCmb_SelectionChanged"/>
        <Label Content="Сортировать по:" HorizontalAlignment="Left" Margin="28,39,0,0" VerticalAlignment="Top"/>
        <Label Content="Отфильтровать по:" HorizontalAlignment="Left" Margin="202.8,39,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="searchNameTB" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="86.8,376,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="Поиск по названию:" HorizontalAlignment="Left" Margin="251,373,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="DescSortCB" Content="По убыванию" Grid.Column="1" HorizontalAlignment="Left" Margin="57.8,45,0,0" VerticalAlignment="Top" Checked="DescSortCB_Checked" Unchecked="DescSortCB_Unchecked"/>
        <Label x:Name="rowCountLB" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Margin="323.8,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.552,0.479"/>
        <Button x:Name="changeMinQuantityBtn" Content="Изменить мин. количество" Visibility="Hidden" HorizontalAlignment="Left" Margin="28,358,0,0" VerticalAlignment="Top" Width="157" Click="changeMinQuantityBtn_Click"/>

    </Grid>
</Window>
